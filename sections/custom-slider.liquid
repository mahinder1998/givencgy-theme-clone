
<section class="superfoods">
    <div class="container">
        <div class="slick-wrapper">
              <div class="cantant">
                    <h2>{{ section.settings.section-heading }}</h2>
                     {{ section.settings.section-heading }}
                    <a href="{{ section.settings.button-link}}">{{ section.settings.button }}</a>
                </div>
          
            <div id="slick1">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'slider-content' %}
                  <div class="slide-item">
                        <div class="img-box">
                           {{ block.settings.slider-image | image_url: width: '' | image_tag }}
                            <h2>{{ block.settings.slider-image-title}}</h2>
                        </div>
                   </div>
                {% endcase %}
                {% else %}
                {% for i in (1..12) %}
                      <div class="slide-item">
                      <div class="img-box">
                          <img src="images/Camu_Camu_CreamBG_250x.avif"> 
                          <h2>title</h2>
                      </div>
                      </div>
                {% endfor %}
              {% endfor %}
             </div>
       </div>
    </div>
</section>


<style>
  /* styles.scss or theme.scss or your custom stylesheet */

.custom-image-with-text {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.image-container img {
  max-width: 100%;
  height: auto;
}

.text-container {
  flex: 1;
  padding: 20px;
}

.text-container h2 {
  font-size: 24px;
  margin-bottom: 10px;
}

.text-container p {
  font-size: 16px;
  color: #666;
}

</style>


{% schema %}
{
  "name": "Custom slider Image text",
  "settings": [
    {
      "type": "text",
      "id": "section-heading",
      "label": "heading",
      "default": "Sourced From Earthâ€™s <br> Most Powerful Superfoods"
    },
    {
      "type": "html",
      "id": "section-description",
      "label": "Description",
      "default":"<p><span class='text-span'>85</span>+ Superfoods, Nutrients & Plant-Based Ingredients.</p>"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button",
      "default": "See All"
    },
    {
      "type": "url",
      "id": "button-link",
      "label": "Button Link"
    }
  ],
  "blocks":[
    {
      "type": "slider-content",
      "name": "Slider Content",
      "settings":[
        {
          "type": "image_picker",
          "id": "slider-image",
          "label": "slider image"
        },
        {
          "type": "text",
          "id": "slider-image-title",
          "label": "slider image title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom slider Image text",
      "category": "Custom"
    }
  ]
} 


{% endschema %}
