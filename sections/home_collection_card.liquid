<section id="hm-collection-card" class="my-5 mx-3 md:my-10 lg:mx-0">
    <div class="container mx-auto overflow-x-hidden">
        <div id="hm-collection-slider" class="keen-slider hm-collection-slider lg:grid lg:grid-cols-6 lg:gap-8 items-start" >
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'collection-card-list' %}
                  <div class="keen-slider__slide hm-collection-items relative grid grid-flow-row gap-2">
                    <div class="hm-collection-image">
                      {% if block.settings.card_imgae %}
                          <img src="{{ block.settings.card_imgae  | img_url: ''}}" alt="{{ block.settings.card_image.alt }}" class="w-full"  />
                        {% else %}
                        {{ 'lifestyle-1' | placeholder_svg_tag }}
                      {% endif %}
                    </div>
                    {% if block.settings.card-title %}
                    <div class="hm-collection-content text-sm uppercase">
                        {{ block.settings.card-title }}
                    </div>
                    {% endif %}
                    {% if block.settings.card-link %}
                    <a href="{{ block.settings.card-link }}" class="hm-collection-links absolute top-0 left-0 w-full h-full"></a>
                    {% endif %}
                  </div>
                {% endcase %}
            {% endfor %}
        </div>
    </div>
</section>   


{% schema %}
{
    "name": "Home Collection card",
    "max_blocks":6,
    "settings": [
    ],
    "blocks": [
        {
            "type": "collection-card-list",
            "name": "collection-card-list",
            
            "settings":[
                {
                    "type": "image_picker",
                    "id": "card_imgae",
                    "label": "Image"
                },
                {
                    "type": "richtext",
                    "id": "card-title",
                    "label": "card title",
                    "default": "<p>Title</p>"
                },
                {
                    "type": "url",
                    "id": "card-link",
                    "label": "link"
                }
            ]
        }
    ]
}
{% endschema %}